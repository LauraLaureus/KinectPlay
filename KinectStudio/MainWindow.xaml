<Window x:Class="KinectStudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectStudio"
        mc:Ignorable="d"
        Title="KinectPlay" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="fileBox" HorizontalAlignment="Left" Height="264" Margin="28,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="374"/>
        <Button x:Name="button" Content="Play" HorizontalAlignment="Left" Margin="423,23,0,0" VerticalAlignment="Top" Width="75" Click="OnClick"/>
        <Button x:Name="loadFileButton" Content="Load File" HorizontalAlignment="Left" Margin="423,58,0,0" VerticalAlignment="Top" Width="75" Click="loadClick"/>
    </Grid>
</Window>
