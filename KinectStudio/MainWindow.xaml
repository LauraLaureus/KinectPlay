<Window x:Class="KinectStudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectStudio"
        mc:Ignorable="d"
        Title="KinectPlay" Height="350" Width="525" Closing="OnWindowsClosing">
    <Grid>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <TextBox x:Name="fileBox" HorizontalAlignment="Left" Height="227" Margin="28,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="374"/>
        <Button x:Name="button" Content="Play" HorizontalAlignment="Left" Margin="423,106,0,0" VerticalAlignment="Top" Width="75" Click="OnClick"/>
        <Button x:Name="loadFileButton" Content="Load File" HorizontalAlignment="Left" Margin="423,60,0,0" VerticalAlignment="Top" Width="75" Click="loadClick" Background="#FFDDDDDD"/>
        <TextBox x:Name="statusBox" HorizontalAlignment="Left" Height="23" Margin="28,22,0,0" TextWrapping="Wrap" Text="Load file" VerticalAlignment="Top" Width="374" ToolTip="currentState" TextAlignment="Center"/>
    </Grid>
</Window>
